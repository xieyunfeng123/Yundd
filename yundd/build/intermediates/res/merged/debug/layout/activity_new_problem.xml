<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <include layout="@layout/top_layout" />

    <LinearLayout
        android:id="@+id/vedio_project"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/layout_3dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingTop="@dimen/layout_15dp" >

            <TextView
                android:id="@+id/problem_send_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发给我的"
                android:textColor="@color/main_color"
                android:textSize="@dimen/textSize_16sp" />

            <TextView
                android:id="@+id/problem_me_create"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我创建的"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_16sp" />

            <TextView
                android:id="@+id/problem_select"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="所有的"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/problem_cursor"
            android:layout_width="80dp"
            android:layout_height="@dimen/layout_3dp"
            android:background="@color/main_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/problem_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>

</LinearLayout>